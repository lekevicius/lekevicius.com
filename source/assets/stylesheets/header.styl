.site-header
  .header-inner
    padding 50px 0 40px 0
    border-bottom 1px solid rgba(black, 0.2)
    line-height 1
    clearfix()
    
  .navigation-items
    float left
    clearfix()
    
    a.site-title
      display block
      float left
      clearfix()
      .logo
        display block
        float left
        height 40px
      .title
        display block
        float left
        font-weight 600
        font-size 20px
        padding 12px 10px 8px 20px
        
    nav
      float left
      
      ul
        margin 0
        list-style none
        clearfix()
        li
          padding 0
          margin 0 0 0 10px
          float left
          a
            display block
            font-size 20px
            padding 12px 10px 8px 10px
  
  .menu-button
    width 30px
    height 30px
    float right
    position relative
    overflow visible
    
    .bar
      width 30px
      height 2px
      background #000
      opacity 0.5
      position absolute
      top 14px
      left 0
      transition all 0.3s
      
      &.first
        transform translateY(-12px)
      &.second
        transform translateY(-4px)
      &.third
        transform translateY(4px)
      &.fourth
        transform translateY(12px)
        
    &.active
      .bar
        opacity 1
        &.first
          opacity 0
          transform translateY(-12px) scaleX(0)
        &.second
          transform translateY(0) rotate(45deg)
        &.third
          transform translateY(0) rotate(-45deg)
        &.fourth
          opacity 0
          transform translateY(12px) scaleX(0)
      
  
  .page-title
    display none
