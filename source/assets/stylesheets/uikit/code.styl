pre_scrollable_max_height = 340px

pre, code, kbd, samp
  font-family font_mono

code
  padding 2px 7px
  font-size 0.9em
  color #999
  background-color #f8f8f8
  white-space nowrap
  white-space pre-wrap
  word-wrap break-word
  border-radius 4px

pre
  display block
  margin 0 0 (line_height_computed / 2) 0
  font-size 0.9em
  line-height line_height_base
  white-space pre
  white-space pre-wrap
  word-break break-all
  word-wrap break-word
  border 1px solid #eee
  border-radius 4px
  
  code
    display block
    overflow-x auto
    padding 0.5em
    margin 0
    color #000
    background #fafafa
    -webkit-text-size-adjust none

  &.scrollable
    max-height pre_scrollable_max_height
    overflow-y auto


