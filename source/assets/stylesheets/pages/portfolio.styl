.work-item
  margin-bottom 30px

  &, &:hover
    border none

  h4
    margin 12px 0 8px 0
    font-weight 700
    font-size 24px
    span
      font-weight 300
      color #666
      display none

  p
    margin 0 0 20px 0
    font-size 16px
    line-height 1.4em
    color #666


.header
  height 200px
  background #333
  padding 30px 0 140px 0

  &.dark
    h1
      color #fff
      &::after
        background rgba(#fff, 0.5)

.work
  #content
    p.work-lead
      font-family font_heading
      font-size 24px
      line-height 1.6
      margin 30px 0

    h3
      font-size 32px
      font-weight bold
      color #333
      margin 60px 0 15px 0

    .full
      padding 1px 0
      &.dark
        color #ccc
        background #222

        h3
          color #ddd

.switcher
  display block
  clearfix()

  .left-option, .right-option
    width 50%
    box-sizing border-box
    padding 10px 0
    text-align center
    background #fff
    border 2px solid #ff3b30
    cursor pointer
    color #ff3b30

    &.current
      background #ff3b30
      color #fff

  .left-option
    float left

  .right-option
    float left
    border-left 0


#content
  .more-works
    background #f8f8f8
    padding 30px 0 0 0

    h3
      font-family font_body
      text-transform uppercase
      color #999
      font-weight 300
      margin 0 0 20px 0
      font-size 24px

    .work-item
      &:hover
        img
          opacity 0.7
      img
        transition opacity 0.3s
      h4
        font-size 20px
      p
        width 100%
        font-weight 400
