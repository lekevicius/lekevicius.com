form.site-search
  border-radius 4px
  border 2px solid key_color
  max-width 480px
  clearfix()

  .input-text
    margin 0 100px 0 0
    display block

    input[type='text']
      border none
      background transparent
      float left
      display block
      padding 11px 16px
      width 100%
      font-size 18px
      box-sizing border-box
      font-family font_body
      font-weight 400

      &:focus
        outline none

  input[type='submit']
    border-radius 0 2px 2px 0
    display block
    background key_color
    border none
    float right
    font-size 20px
    box-sizing border-box
    font-family font_heading
    font-weight 300
    width 100px
    padding 13px 0
    margin 0
    color #fff
    -webkit-appearance none
