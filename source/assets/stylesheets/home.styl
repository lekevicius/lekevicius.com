html
  background #f8f8f8

body, #page
  background transparent

.logo
  padding-top 40px
  .logo-image
    width 92px
    height 92px
    background url('/img/logo.svg') no-repeat

@media screen_medium_min
  .wrap
    margin-left 30px

.text
  padding-top 40px
  @media screen_small_only
    padding-left 60px
    padding-right 60px

h1, p
  font-size 16px
  line-height 30px
  margin 0

h1, p.subheading
  font-size 24px
  text-transform lowercase

h1
  font-weight 600
  color #4A90E2

p.subheading
  font-weight 300

a
  color #4A90E2

.letter
  font-weight 400
  padding-bottom 40px
  @media screen_medium_min
    max-width 380px
  p
    margin 30px 0 0 0

@media screen_small_max
  .logo
    .logo-image
      margin 0 auto
